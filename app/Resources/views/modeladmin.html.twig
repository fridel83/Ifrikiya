               bienvenu {{ app.user.username }} </br> <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
             {% else %}
			  <div id="connect">
              <a href="{{ path('fos_user_security_login') }}">Connexion</a>
			  </div>
             {% endif %}
			  {% endblock %}
			 </div>
		   </div>
	  </div>
	  
	  <div id="menu">
