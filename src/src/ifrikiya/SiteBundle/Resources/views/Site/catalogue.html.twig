 {% extends "::modelcatalogue.html.twig" %}
  
 
 {% block encodage %}
   {{ parent() }}
 {% endblock %} 

{% block title %}
   Catalogue!
{% endblock %}

{% block corps %}
  <div id="titre">
     <h2>CATALOGUE</h2>
  </div>
  {% for livre in liste_livre %}

  <div id="cadre">
    <div class="cadre_image">
      
      <a href="{{ path('ifrikiya_site_voir_livre', {'id':livre[0] }) }}"><img src="{{ asset('bundles/ifrikiyasite/images/livres/'~livre[2])}}" /></a>
    </div>
    <div class="present">
      <h3><a href="{{ path('ifrikiya_site_voir_livre', {'id':livre[0] }) }}">{{ livre[1] }}</a></h3>
      <p> paru en: {{ livre[7] }}</p>
      <p>prix: {{ livre[4] }} fcfa,  {{ livre[5] }} euros</p>
       <p><a href="{{ path('ifrikiya_site_voir_livre', {'id':livre[0] }) }}">voir ce livre</a></p>
    </div>
    
  </div>
  <hr/>
  {% endfor %}
{% endblock %}     