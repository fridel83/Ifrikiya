{% extends "::modelcatalogue.html.twig" %}
  
   {% block encodage %}
   {{ parent() }}
 {% endblock %} 
 
 {% block corps %}
  
		   <h1>votre Mail</h1>
   <form action="{{ path('ifrikiya_site_mail_form') }}" method="post" {{ form_enctype(form) }}>
    <div class="error">
	{{ form_errors(form) }}
    </div>
    <table>
     <tr>
       <td>{{ form_label(form.email) }}</td>
       <td>{{ form_errors(form.email) }}</td>
	   <td>{{ form_widget(form.email) }}</td>
	 </tr>
	 <tr>
	    <td>{{ form_label(form.objet) }}</td>
	    <td>{{ form_errors(form.objet) }}</td>
	    <td>{{ form_widget(form.objet) }}</td>
	 </tr>
	 <tr>
	    <td>{{ form_label(form.message) }}</td>
	    <td>{{ form_errors(form.message) }}</td>
	    <td>{{ form_widget(form.message) }}</td>
	 </tr>
	</table>
	 
    {{ form_rest(form) }}
    {{ form_widget(form._token) }}
    
    <input type="submit" value="envoyer"/>
</form>
	
 
 {% endblock %}