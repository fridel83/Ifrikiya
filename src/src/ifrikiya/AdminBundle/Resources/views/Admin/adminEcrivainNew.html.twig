{% extends "::modelcatalogue.html.twig" %}

{% block title %}Administration Ecrivains| ajout{% endblock %}

{% block encodage %}
   {{ parent() }}
 {% endblock %} 
 
 
 
 
 
 {% block corps %}
 {% if is_granted('ROLE_ADMIN') %}
   <h1>Ajout d'un nouvel Ecrivain</h1>
   <form action="{{ path('ifrikiya_admin_ajouter_ecrivain') }}" method="post" {{ form_enctype(form) }}>
    <div class="error">
	{{ form_errors(form) }}
    </div>
    <table>
     <tr>
       <td>{{ form_label(form.nom) }}</td>
       <td>{{ form_errors(form.nom) }}</td>
	   <td>{{ form_widget(form.nom) }}</td>
	 </tr>
	 <tr>
	    <td>{{ form_label(form.prenom) }}</td>
	    <td>{{ form_errors(form.prenom) }}</td>
	    <td>{{ form_widget(form.prenom) }}</td>
	 </tr>
	 <tr>
	    <td>{{ form_label(form.email) }}</td>
	    <td>{{ form_errors(form.email) }}</td>
	    <td>{{ form_widget(form.email) }}</td>
	 </tr>
	 <tr>
	    <td>{{ form_label(form.login) }}</td>
	    <td>{{ form_errors(form.login) }}</td>
	    <td>{{ form_widget(form.login) }}</td>
	 </tr>
	 <tr>
	    <td>{{ form_label(form.passworld) }}</td>
	    <td>{{ form_errors(form.passworld) }}</td>
	    <td>{{ form_widget(form.passworld) }}</td>
	 </tr>
	 <tr>
	    <td>{{ form_label(form.telephone) }}</td>
	    <td>{{ form_errors(form.telephone) }}</td>
	    <td>{{ form_widget(form.telephone) }}</td>
	 </tr>
	 <tr>
	    <td>{{ form_label(form.dateNaissance) }}</td>
	    <td>{{ form_errors(form.dateNaissance) }}</td>
	    <td>{{ form_widget(form.dateNaissance) }}</td>
	 </tr>
	</table>
	 
    {{ form_rest(form) }}
    {{ form_widget(form._token) }}
    
    <input type="submit" />
</form>
 {% endif %}
 {% endblock %}