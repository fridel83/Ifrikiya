{% extends "::modelcatalogue.html.twig" %}

{% block title %}Administration images{% endblock %}

{% block encodage %}
   {{ parent() }}
 {% endblock %} 
 
 
 
 
 {% block corps %}
 {% if is_granted('ROLE_ADMIN') %}
   <h1><a class="add-link" href="{{ path('ifrikiya_admin_ajouter_image') }}">Ajouter une image</a></h1>
   <table>
    <tr>
        <th>image</th>
        <th>Actions</th>
    </tr>
    {% for image in images %}
    <tr>
        <td>{{ image.nom }}</td>
        <td>
            <a href="{{ path('ifrikiya_admin_modifier_image', { 'id': image.idimage }) }}">Editer</a> -
            <a href="{{ path('ifrikiya_admin_supprimer_image', { 'id': image.idimage }) }}">Supprimer</a>
        </td>
    </tr>
    {% endfor %}
</table>
 {% endif %}
 {% endblock %}